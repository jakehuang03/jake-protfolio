{
    "id": "hashiru-template",
    "name": "Hashiru Template",
    "description": "This is a Hashiru template",
    "image": "image.png",
    "schema": {
        "name": {
            "type": "string",
            "page": "index.html",
            "default": ""
        },
        "summary": {
            "type": "textarea",
            "page": "index.html",
            "default": ""
        },
        "resume": {
            "type": "link",
            "page": "index.html",
            "default": ""
        },
        "education": {
            "type": "array",
            "page": "index.html",
            "items": {
                "university": {
                    "type": "string",
                    "default": ""
                },
                "startYear": {
                    "type": "string",
                    "default": ""
                },
                "endYear": {
                    "type": "string",
                    "default": ""
                },
                "major": {
                    "type": "string",
                    "default": ""
                },
                "gpa": {
                    "type": "integer",
                    "default": 0
                },
                "courseWork": {
                    "type": "textarea",
                    "default": ""
                }
            }
        },
        "projects": {
            "type": "array",
            "page": "index.html",
            "items": {
                "projectName": {
                    "type": "string",
                    "default": ""
                },
                "projectDetails": {
                    "type": "textarea",
                    "default": ""
                },
                "codeLink": {
                    "type": "link",
                    "default": ""
                },
                "projectImage": {
                    "type": "image",
                    "default": ""
                }
            }
        },
        "links": {
            "type": "array",
            "page": "index.html",
            "items": {
                "linkIcon": {
                    "type": "image",
                    "default": ""
                },
                "link": {
                    "type": "link",
                    "default": ""
                }
            }
        }
    }
}
